@import 'nib'
@import 'nib/gradients'

.bomTimeLine
	width 80px

.bomTimeLine .bomHour .bomTitle
	text-align center
	background linear-gradient(top, #efefef, #ddd)
	font-size: 0.9em
	color: #444
	padding: 1px 0px
	font-weight: bold
	border-bottom 1px solid #bbb

.bomTimeLine .bomMin
	border-bottom 1px solid #bbb

.bomTimeLine .bomMin .bomTitle
	display none

.bomTimeLine .bomMin._30 .bomTitle
	display block
	font-size: 0.8em
	font-weight: normal


